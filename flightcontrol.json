{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "api",
          "name": "API",
          "type": "web",
          "buildType": "nixpacks",
          "installCommand": "cd radar-backend && poetry install --no-dev --no-interactive --no-ansi",
          "startCommand": "cd radar-backend && poetry run uvicorn main:app --host 0.0.0.0 --port 3001",
          "buildCommand": "./build_backend.sh",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 3001,      
          "healthCheckPath": "/api/health"          
        },
        {
          "id": "frontend",
          "name": "Frontend",
          "type": "static",
          "buildType": "nixpacks",
          "installCommand": "cd radar-frontend && npm install",
          "buildCommand": "./build_frontend.sh",
          "outputDirectory": "radar-frontend/dist",
          "envVariables": {
            "VITE_API_URL": "/api"
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceSize": "db.t3.micro",
          "storage": 20,
          "private": true
        }
      ]
    }
  ]
} 