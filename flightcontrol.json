{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "api",
          "name": "API",
          "type": "web",
          "buildType": "docker",
          "dockerfilePath": "./radar-backend/Dockerfile",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 3001,      
          "healthCheckPath": "/api/health"          
        },
        {
          "id": "frontend",
          "name": "Frontend",
          "type": "static",
          "buildType": "nixpacks",
          "buildCommand": "cd radar-frontend && npm install && npm run build",
          "outputDirectory": "radar-frontend/dist",
          "envVariables": {
            "VITE_API_URL": "/api"
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceSize": "db.t3.micro",
          "storage": 20,
          "private": true
        }
      ]
    }
  ]
} 