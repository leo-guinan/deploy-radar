{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "api",
          "name": "API",
          "type": "web",
          "buildType": "nixpacks",
          "basePath": ".",
          "installCommand": "git submodule update --init --recursive && cd radar-backend && poetry install --no-dev --no-ansi",
          "startCommand": "cd radar-backend && poetry run uvicorn main:app --host 0.0.0.0 --port 3001",
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 1,
          "port": 3001,      
          "healthCheckPath": "/api/health",
          "customDomains": [
            {
              "hostname": "your-api-domain.com",
              "certificate": {
                "type": "acm"
              }
            }
          ]
        },
        {
          "id": "frontend",
          "name": "Frontend",
          "type": "static",
          "buildType": "nixpacks",
          "basePath": ".",
          "installCommand": "git submodule update --init --recursive && cd radar-frontend && npm install",
          "buildCommand": "cd radar-frontend && npm run build",
          "outputDirectory": "radar-frontend/dist"          
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "15",
          "instanceSize": "db.t3.micro",
          "storage": 20,
          "private": true
        }
      ]
    }
  ]
} 